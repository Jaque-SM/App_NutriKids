<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lista_card_"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="@drawable/cardapio">


    <View
        android:id="@+id/barra1"
        android:layout_width="386dp"
        android:layout_height="554dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/background_tela_inicial" />

    <ImageView
        tools:ignore="NotSibling"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_alignStart="@id/lista_card_"
        android:layout_alignTop="@id/lista_card_"
        android:layout_marginEnd="20dp"
        android:src="@drawable/foto_paciente" />

    <TextView
        android:id="@+id/campo1"
        android:layout_width="269dp"
        android:layout_height="34dp"

        android:layout_alignTop="@+id/barra1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"

        android:background="@drawable/estilo_edit_campo_cadastro"
        android:elevation="4dp" />

    <TextView
        android:id="@+id/campo2"
        android:layout_width="269dp"
        android:layout_height="34dp"
        android:layout_alignTop="@+id/campo1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:background="@drawable/estilo_edit_campo_cadastro"
        android:elevation="4dp" />

    <TextView
        android:id="@+id/campo3"
        android:layout_width="269dp"
        android:layout_height="34dp"
        android:layout_alignTop="@+id/campo2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:background="@drawable/estilo_edit_campo_cadastro"
        android:elevation="4dp" />

</RelativeLayout>
